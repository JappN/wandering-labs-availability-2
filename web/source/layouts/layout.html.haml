!!!
%html{ 'ng-app' => 'wl_availability' }
  %head
    %meta{ charset: "utf-8" }
    %meta{ 'http-equiv' => "X-UA-Compatible", content: "IE=edge" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1" }

    %title Wandering Labs | Campsite Full?
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    %base{ :href => '/' }
  %body{}

    %nav.navbar.navbar-inverse
      .container
        .navbar-header
          %a.navbar-brand{ href: 'http://wanderinglabs.com'}
            %i.fa.fa-cogs.fa-lg
            WanderingLabs

    .jumbotron
      .container
        %h1 Campground Full?
        %h4 Tell us when and where you want to camp and we will let you know when a site becomes available.

    .container
      .row
        .col-md-8
          = yield
        .col-md-4.amazon
          %br/
          :javascript

            values = ['rv gear', 'camping', 'camping chairs', 'camping equipment', 'rv equipment', 'rv accessories', 'camping cookware'];

            amzn_assoc_placement = "adunit0";
            amzn_assoc_enable_interest_ads = "true";
            amzn_assoc_tracking_id = "wl-reserve-20";
            amzn_assoc_ad_mode = "auto";
            amzn_assoc_ad_type = "smart";
            amzn_assoc_marketplace = "amazon";
            amzn_assoc_region = "US";
            amzn_assoc_linkid = "e22acabde2981a9e8410f05f6ea76b7c";
            amzn_assoc_fallback_mode = {"type":"search","value": values[Math.floor(Math.random() * values.length)]};
            amzn_assoc_default_category = "All";
            amzn_assoc_default_category = "SportingGoods";
            amzn_assoc_emphasize_categories = "3375251";
            amzn_assoc_search_bar = "true";
            amzn_assoc_title = "";

          = javascript_include_tag "http://z-na.amazon-adsystem.com/widgets/onejs?MarketPlace=US"

          / amzn_assoc_ad_mode = "manual";
          / amzn_assoc_asins = 'B00WMFXE5O,B000BUU5WW,B002OUMVWY,B0006IX87S,B0028PJ10K,B001GC2LVM,B002XLHUQG,B00708MDAK';

    .container
      .row
        .col-md-12
          .footer-content
            %a{ href: 'http://wanderinglabs.com' }Wandering Labs
            is a creation of
            %a{ href: 'http://tiwatson.com' }Tim Watson
